[
{% assign artigos = site.pages | where_exp:"p","p.path contains '/conteudo/artigos/' and p.path != 'conteudo/artigos/exemplo.md'" %}
{% for artigo in artigos %}
  {
    "slug": "{{ artigo.url | split: '/' | last | remove: '.html' }}",
    "titulo": "{{ artigo.titulo | escape }}",
    "area": [{% for a in artigo.area %}"{{ a }}"{% unless forloop.last %}, {% endunless %}{% endfor %}],
    "data": "{{ artigo.data | date: '%Y-%m-%d' }}",
    "fonte": "{{ artigo.fonte | escape }}",
    "fonteURL": "{{ artigo.fonteURL }}",
    "thumbnail": "{{ artigo.thumbnail }}",
    "imagem": "{{ artigo.imagem }}",
    "imageSource": "{{ artigo.imageSource | escape }}",
    "writerImg": "{{ artigo.writerImg }}",
    "writerName": "{{ artigo.writerName | escape }}",
    "writerLink": "{{ artigo.writerLink }}",
    "resumo": "{{ artigo.content | strip_html | strip_newlines | truncate: 200 | escape }}"
  }{% unless forloop.last %}, {% endunless %}
{% endfor %}
]
