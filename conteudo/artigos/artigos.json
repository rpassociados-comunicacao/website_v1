---
layout: null
permalink: /conteudo/artigos.json
---

[
  {% assign artigos = site.conteudo_artigos_pt | where_exp: "item", "item.path contains '/conteudo/artigos/'" %}
  {% for artigo in artigos %}
    {
      "id": "{{ artigo.basename }}",
      "titulo": {{ artigo.titulo | jsonify }},
      "area": {{ artigo.area | jsonify }},
      "data": "{{ artigo.data }}",
      "fonte": {{ artigo.fonte | jsonify }},
      "fonteURL": {{ artigo.fonteURL | jsonify }},
      "thumbnail": "{{ artigo.thumbnail }}",
      "imagem": "{{ artigo.imagem }}",
      "imageSource": {{ artigo.imageSource | jsonify }},
      "writerImg": "{{ artigo.writerImg }}",
      "writerName": {{ artigo.writerName | jsonify }},
      "writerLink": {{ artigo.writerLink | jsonify }},
      "texto": {{ artigo.texto | jsonify }}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
